const int led = 13;

void handleRoot() {
  digitalWrite(led, 1);
  server.send(200, "text/plain", "hello from esp8266!\r\n");
  digitalWrite(led, 0);
}

void handleNotFound() {
  digitalWrite(led, 1);
  String message = "File Not Found\n\n";
  message += "URI: ";
  message += server.uri();
  message += "\nMethod: ";
  message += (server.method() == HTTP_GET) ? "GET" : "POST";
  message += "\nArguments: ";
  message += server.args();
  message += "\n";
  for (uint8_t i = 0; i < server.args(); i++) {
    message += " " + server.argName(i) + ": " + server.arg(i) + "\n";
  }
  server.send(404, "text/plain", message);
  digitalWrite(led, 0);
}
///////////////// Implementation des classe BME280Meteo Dans notre Code  ///////////////////////////////////////////// 
class BME280Meteo {

  public:
// les 4 variables declarees du classe 
    float humidite;

    float temperature;

    float pression;

    float altitude;
  // fonction pour faire update des variables
    void updatemeteo () {

      humidite = bme.readHumidity();
      temperature = bme.readTemperature();
      altitude = bme.readAltitude (SEALEVELPRESSURE_HPA) ;
      pression = bme.readPressure() / 100.0F;
    }
  // la fonction pour formatter nos donnees sous format JSON
    String texteJSON() {
      String message = R"({"body":{"meteo":{"humidity": )";
      message += humidite;
      message += " ,\"temperature\":  ";
      message += temperature;
      message += " ,\"altitude\":  ";
      message += altitude;
      message += " ,\"pressure\":  ";
      message += pression;
      message += "}}}";
      return message;
    }
};

